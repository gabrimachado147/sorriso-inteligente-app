# Sorriso Inteligente App - Environment Variables Template
# Copie este arquivo para .env.local e preencha com suas próprias chaves

# ========================================
# API Configuration
# ========================================
VITE_API_BASE_URL=http://localhost:3000/api
VITE_N8N_WEBHOOK_URL=your_n8n_webhook_url_here
VITE_EVOLUTION_API_URL=your_evolution_api_url_here

# ========================================
# Supabase Configuration
# ========================================
# Obtenha essas chaves no painel do Supabase (https://supabase.com)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Environment Settings
# ========================================
# Valores: development | staging | production
VITE_ENVIRONMENT=development

# ========================================
# Debug Settings
# ========================================
# true/false - Habilita logs de debug
VITE_DEBUG_MODE=true
# error | warn | info | debug
VITE_LOG_LEVEL=debug

# ========================================
# Feature Flags
# ========================================
# true/false - Usar dados mock ao invés da API real
VITE_ENABLE_MOCK_API=true
# true/false - Habilitar Google Analytics
VITE_ENABLE_ANALYTICS=false
# true/false - Habilitar relatório de erros
VITE_ENABLE_ERROR_REPORTING=true

# ========================================
# WhatsApp Business (Opcional)
# ========================================
VITE_CONFIG_SESSION_PHONE_CLIENT=your_session_client_id
VITE_CONFIG_SESSION_PHONE_NAME=Your_Bot_Name
VITE_CONFIG_SESSION_PHONE_VERSION=1.0.0
VITE_WA_BUSINESS_JID=your_whatsapp_business_jid

# ========================================
# Analytics & Monitoring (Production)
# ========================================
# Obtenha em https://analytics.google.com
VITE_GA_TRACKING_ID=your_google_analytics_id
# Obtenha em https://sentry.io
VITE_SENTRY_DSN=your_sentry_dsn_here

# Flags SDK (Statsig)
NEXT_PUBLIC_STATSIG_CLIENT_KEY=
sorrisoflag_STATSIG_SERVER_API_KEY=
sorrisoflag_EXPERIMENTATION_CONFIG_ITEM_KEY=
