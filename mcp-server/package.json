{
  "name": "codacy-mcp-server",
  "version": "1.0.0",
  "description": "Codacy MCP Server - Model Context Protocol Server para análise de qualidade de código",
  "main": "codacy-mcp-server.js",
  "bin": {
    "codacy-mcp-server": "./codacy-mcp-server.js"
  },
  "scripts": {
    "start": "node codacy-mcp-server.js",
    "dev": "nodemon codacy-mcp-server.js",
    "test": "jest",
    "build": "echo 'No build required for Node.js server'",
    "install-global": "npm install -g .",
    "setup": "npm install && npm run configure",
    "configure": "node scripts/configure.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "codacy",
    "code-quality",
    "static-analysis",
    "coverage",
    "ci-cd"
  ],
  "author": {
    "name": "Gabriel Machado",
    "email": "gabrimachado147@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrimachado147/sorriso-inteligente-app.git",
    "directory": "mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "codacy-mcp-server.js",
    "scripts/",
    "config/",
    "README.md"
  ],
  "mcp": {
    "server": {
      "name": "codacy",
      "description": "Codacy code quality analysis server",
      "version": "1.0.0",
      "capabilities": [
        "code_analysis",
        "coverage_upload",
        "metrics_retrieval",
        "pull_request_analysis",
        "quality_gates_configuration"
      ]
    }
  }
}
